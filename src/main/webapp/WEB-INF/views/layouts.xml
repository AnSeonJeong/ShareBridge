<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>

	<definition name="baseLayout" template="/WEB-INF/views/layout-tiles.jsp">
		<put-attribute name="header" value="/WEB-INF/views/header.jsp" />
		<put-attribute name="nav" value="/WEB-INF/views/nav.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/content.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/footer.jsp" />
	</definition>
	
	<definition name="login" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/login.jsp" />
	</definition>
	
	<definition name="bbslist" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/bbs/bbslist.jsp" />
	</definition>
	
	<definition name="bbswrite" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/bbs/bbswrite.jsp"></put-attribute>
	</definition>
	
	<!-- product registration -->
	<definition name="productRegi" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/details/productRegi.jsp"></put-attribute>
	</definition>
	
	<!-- details message -->
	<definition name="detailsMsg" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/details/detailsMsg.jsp"></put-attribute>
	</definition>
	
	<!-- product detail -->
	<definition name="productDetail" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/details/productDetail.jsp"></put-attribute>
	</definition>
	
	<!-- product update -->
	<definition name="productUpdate" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/details/productUpdate.jsp"></put-attribute>
	</definition>
</tiles-definitions>